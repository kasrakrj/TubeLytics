# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.YoutubeController.index()
GET     /search                     controllers.YoutubeController.search(keyword: String)
GET     /channel/:channelId        controllers.YoutubeController.channelProfile(channelId: String)
GET     /wordStats/:keyword         controllers.YoutubeController.wordStats(keyword: String)
GET     /tags/:videoID         controllers.YoutubeController.tags(videoID: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
